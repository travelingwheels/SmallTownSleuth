<div class="header"><h1>All Reviews</h1></div>
<br>
  <br>
  <div class="wrapper">
  
<ul>
  <% @reviews.each do |r| %>
    <li><%= r.town.formatted_name %><br><%= r.content %><br>By: <%= r.user.name %><br>reviewed on: <%= r.created_at_date_time %><br>
    <%= link_to "Leave a Comment", new_review_comment_path(r) %> or 
    <%= link_to "See All Comments", review_comments_path(r) %><br><br></li>
    <% end %>
</ul>
</div>
